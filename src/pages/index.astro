---
import BentoGrid from "@components/Dashboard/BentoGrid.astro";
import Layout from "@layouts/Layout.astro";
const Pathname = Astro.originPathname;
---

<Layout>
	<section class="bg-black border-b border-neutral-800 p-5">
		<h1 class="font-mono">
			{Pathname === "/" ? "BetterMe | Home" : Pathname}
		</h1>
	</section>

	<div class="flex flex-col items-center justify-center h-full">
		<span class="text-center mb-5">
			<h1 class=" text-3xl font-bold leading-relaxed font-mono">¿Qué quieres hacer hoy?</h1>
			<p class="text-sm text-neutral-700 font-semibold">da click a una de las opciones para dirigirte al panel correspondiente.</p>
		</span>
		<BentoGrid />
	</div>

	{
		//finanzas, proyectos, accesos, links de interes, IA
	}
</Layout>
